<%= form_for(@item, html: {class: "form-horizontal"}) do |f| %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-offset-1 col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :name, autofocus: true, class: "form-control input-sm" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-offset-1 col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :description, class: "form-control input-sm" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-sm-offset-1 col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.number_field :price, class: "form-control input-sm", :step => 'any' %>
    </div>
  </div>

  <div class="form-group">
    <div class="row well well-sm">
      <%= f.submit "Create", class: btn_create("col-sm-offset-3") %>
      <%= button_tag link_icon("trash", "Clear"), type: :reset, 
                                      class: btn_show %>
    </div>
  </div>  

<% end %>
