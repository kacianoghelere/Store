<%= provide(:title, @item.name) %>

<div class="row content_info">

  <div class="row">
    <strong>Description:</strong>
    <%= @item.description %>
  </div>

  <div class="row">
    <strong>Price:</strong>
    <%= @item.price %>
  </div>

  <div class="row">
    <strong>Seller:</strong>
    <%= link_to @item.user.name, @item.user %>
  </div>
  
</div>

<div class="row row-margin">
  <%= link_to link_icon('arrow-left', 'Back'), items_path, 
                                                class: btn_show('left') %>
  <%= link_to link_icon('edit', 'Edit'), edit_item_path(@item), 
                                                  class: btn_show('right') %>
</div>