<div class="page-header">
  <h1>Roles</h1>
</div>
<div class="wraper">
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3" width="10%"></th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= role.description %></td>
          <td>
            <%= link_to link_icon('new-window', ''), role,
                                                class: "btn btn-default btn-sm" %>
          </td>
          <td>
            <%= link_to link_icon('edit', ''), edit_role_path(role),
                                                   class: "btn btn-info btn-sm" %>
          </td>
          <td>
            <%= link_to link_icon('remove', ''), role, method: :delete, 
                                                data: { confirm: 'Are you sure?' },
                                                class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<%= link_to link_icon('plus', 'New Role'), new_role_path, class: "btn btn-default" %>
