<%= provide(:title, 'Roles') %>
<p id="notice"><%= notice %></p>

<div class="col-sm-12">
  <table class="table table-hover table-bordered table-striped table-resposive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="2" width="10%"></th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td style="vertical-align: middle;"><%= link_to role.name, role %></td>
          <td style="vertical-align: middle;"><%= role.description %></td>          
          <td>
            <%= link_to link_icon('edit'), edit_role_path(role), 
                                                            class: btn_edit %>
          </td>
          <td>
            <%= link_to link_icon('remove'), role, method: :delete, 
                                          data: { confirm: 'Are you sure?' },
                                          class: btn_destroy %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row row-margin">
  <% if can? :manage, Role %>
    <%= link_to link_icon('plus', 'New Role'), new_role_path, 
                                                            class: btn_create %>
  <% end %>
</div>
