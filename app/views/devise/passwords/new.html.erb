<%= provide(:title, 'Forgot your password?') %>

<div class="row">
	<div class="col-sm-offest-5 col-sm-5">
		<h4>Please, fill your registering email:</h4>
	</div>
</div>
<%= form_for(resource,  as: resource_name, 
												url: password_path(resource_name), 
												html: { class: "form-horizontal", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-offset-3 col-sm-1 control-label" %>
    <div class="col-sm-4">      
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="row well well-sm">
      <%= f.submit "Send", class: btn_create("col-sm-offset-4") %>
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>