<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= link_icon('user') %> <b class="caret"></b>
  </a>
  <ul class="dropdown-menu login-dropdown" style="">
    <li>
      <div class="row">
        <div class="col-sm-12">
          <%= form_for(:user, url: session_path(:user), 
              html: {id: "login-nav", class: "form-horizontal"}) do |f| %>

            <div class="form-group">
              <%= f.label :email, class: "control-label sr-only" %>
              <%= f.email_field :email, placeholder: "user@example.com",
                                      class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, 
                            class: "control-label sr-only" %>
              <%= f.password_field :password, autocomplete: "off", 
                           placeholder: "******", class: "form-control" %>
            </div>

            <div class="form-group">               
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "remember-label" %>               
            </div>

            <div class="form-group">
              <%= f.submit "Sign in", class: btn_login %>
              <%= link_to "Sign Up", new_user_registration_path, 
                                      class: btn_signup %>
            </div>

          <% end %>
        </div>
      </div>
    </li>
  </ul>
</li>