<div class="page-header">
  <center><h2>Edit <%= resource_name.to_s.humanize %></h2></center>
</div>
<div class="wraper">
  <%= form_for(resource, as: resource_name, 
                      url: registration_path(resource_name), 
                      html: {class: "form-horizontal", method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-offset-3 col-sm-1 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :email, class: "col-sm-offset-3 col-sm-1 control-label" %>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-offset-3 col-sm-1 control-label"  %> 
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", 
                                                        class: "form-control" %>
        <i class="help-block">(leave blank if you don't want to change it)</i>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmation', 
                              class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", 
                                                        class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, 
                              class: "col-sm-offset-2 col-sm-2 control-label" %> 
      <div class="col-sm-4">
        <%= f.password_field :current_password, autocomplete: "off", 
                                                        class: "form-control" %>
        <i class="help-block">(needed to confirm your changes)</i>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <div class="row well well-sm">
        <%= f.submit "Update", class: "col-sm-offset-4 btn btn-primary btn-md"%>
        <%= button_to "Cancel my account", registration_path(resource_name), 
                        data: { confirm: "Are you sure?" }, method: :delete,
                        class: "btn btn-danger btn-md" %>
      </div>
    </div>
  <% end %>

</div>

<div class="page-footer">
  <div class="row col-sm-12">    
    <%= link_to "Back", :back %>
  </div>  
</div>
