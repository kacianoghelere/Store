<%= provide(:title, 'New User') %>

<%= form_for(resource, as: resource_name, 
                                  url: registration_path(resource_name), 
                                  html: {class: "form-horizontal"}) do |f| %>

  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :name, class: "col-sm-offset-3 col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-offset-3 col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-offset-3 col-sm-1 control-label" %>      
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
        <p class="help-block">
          (<%= @minimum_password_length %> characters minimum)
        </p>
      <% end %>                                                        
    </div>                                                     
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirmation', 
                            class: "col-sm-offset-2 col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="row well well-sm">
      <%= f.submit "Sign up", class: btn_create("col-sm-offset-4") %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>