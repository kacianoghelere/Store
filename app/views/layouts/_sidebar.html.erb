<div class="nav-side-menu">
  <div class="brand">
    <%= sidebar_link 'home', 'Home', authenticated_root_path %>
  </div>
  <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" 
    data-target="#menu-content"></i>  
  <div class="menu-list">
    <ul id="menu-content" class="menu-content collapse out">    

      <% if can? :read, Item %>
        <li><%= sidebar_link 'gift', 'Items', items_path %></li>
      <% end %>
            
      <% if (can? :manage, User) || (can? :manage, Role) %>
        <li data-toggle="collapse" data-target="#management" class="collapsed">
          <%= sidebar_link 'wrench', 'Management' %>
        </li>
        <ul class="sub-menu collapse" id="management">
          <% if can? :manage, User %>
            <li><%= sidebar_link 'user', 'Users', users_path %></li>            
          <% end %>
          <% if can? :manage, Role %>
            <li><%= sidebar_link 'briefcase', 'Roles', roles_path %></li>            
          <% end %>

          <% if (can? :manage, Menu) || (can? :manage, Page) %>
            <li data-toggle="collapse" data-target="#navs" class="collapsed">
              <%= sidebar_link 'wrench', 'Navigation' %>
            </li>
            <ul class="sub-menu collapse" id="navs">
              <% if can? :manage, Menu %>
                <li><%= sidebar_link 'tasks', 'Menus', menus_path %></li>            
              <% end %>
              <% if can? :manage, Page %>
                <li><%= sidebar_link 'file', 'Pages', pages_path %></li>           
              <% end %>      
            </ul>
          <% end %>      
        </ul>
      <% end %>

    </ul>
  </div>
</div>